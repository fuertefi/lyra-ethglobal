{
  "printWidth": 80,
  "proseWrap": "preserve",
  "singleQuote": false,
  "useTabs": false,
  "tabWidth": 2,
  "arrowParens": "avoid",
  "semi": true,
  "trailingComma": "all",
  "overrides": [
